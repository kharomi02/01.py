## Casting
## merubah dari satu tipe ke tipe lain

## INTEGER
print("====INTEGER====")
data_int = int(input("masukan nilai :"))
data_float = float(data_int)
data_str = str(data_int)
data_bool = bool(data_int) # akan false jika int = 0
print("data = ", data_int, ",type =",type(data_int))
print("data = ", data_float,",type =",type(data_float))
print("data = ", data_str,",type =",type(data_str))
print("data = ", data_bool,",type =",type(data_bool))

## FLOAT
print("====FLOAT====")

data_float = float(input("masukan nilai :"))
data_int = int(data_float) # akan dibulatkan ke bawah
data_str = str(data_float)
data_bool = bool(data_float) # akan false jika nilai float = 0
print("data = ", data_float, ",type =",type(data_float))
print("data = ", data_int,",type =",type(data_int))
print("data = ", data_str,",type =",type(data_str))
print("data = ", data_bool,",type =",type(data_bool))


## STRING
print("====STRING====")

data_str = str(input("masukan nilai :"))
data_int = int(data_str) # string harus angka
data_float = float(data_str) # string harus angka
data_bool = bool(data_str)  # false jika string nya kosong
print("data = ", data_str,type(data_str))
print("data = ", data_int,",type =",type(data_int))
print("data = ", data_float,",type =",type(data_float))
print("data = ", data_bool,",type =",type(data_bool)) 


## BOOLEAN
print("====BOOLEAN====")

data_bool = True;
data_int = int(data_bool) # akan dibulatkan ke bawah
data_str = str(data_bool)
data_float = float(data_bool)  # akan false jika nilai float = 0
print("data = ", data_bool, ", type =",type(data_bool))
print("data = ", data_int,",type =",type(data_int))
print("data = ", data_str,",type =",type(data_str))
print("data = ", data_float,",type =",type(data_float))


